<div class="tabnav">
  <nav class="tabnav-tabs">
    <% unless battletag == current_user.battletag %>
      <a href="<%= user_path(User.parameterize(battletag), platform, region) %>" class="tabnav-tab <%= "selected" if profile_tab_active? %>">
        View profile
      </a>
    <% end %>
    <% if current_user.complete? %>
      <a href="<%= user_path(current_user, current_user.platform, current_user.region) %>" class="tabnav-tab <%= "selected" if profile_tab_active? && battletag == current_user.battletag %>">
        Your profile
      </a>
    <% end %>
    <a href="<%= settings_path %>" class="tabnav-tab <%= "selected" if settings_tab_active? %>">Settings</a>
  </nav>
</div>
