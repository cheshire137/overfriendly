      <a href="<%= user_path(current_user, current_user.platform, current_user.region) %>" class="tabnav-tab <%= "selected" if profile_tab_active? %>">Profile</a>
    <% end %>
    <a href="<%= friends_path(current_user, current_user.platform, current_user.region) %>" class="tabnav-tab <%= "selected" if friends_tab_active? %>">Friends</a>
