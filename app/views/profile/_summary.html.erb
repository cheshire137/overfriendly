<div class="border rounded-2 mt-2 mb-4 p-3">
  <div class="d-flex flex-items-center flex-justify-center mb-2">
    <% if profile.rank_url %>
      <img class="d-inline-block flex-shrink-0" width="50" height="50" src="<%= profile.rank_url %>" alt="Rank <%= profile.sr %> logo">
    <% end %>
    <span class="d-inline-block text-bold">
      <% if profile.sr %>
        <%= profile.sr %>
      <% else %>
        Unranked
      <% end %>
    </span>
  </div>

  <%= render partial: 'profile/stats', locals: { stats: stats, limit: 3 } %>
</div>
